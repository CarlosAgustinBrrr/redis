    <script>
        fetch('/obtenerBarcos')
            .then(response => response.json())
            .then(barcos => {
                const barcosContainer = document.getElementById('barcosContainer');
                let row = document.createElement('div');
                row.classList.add('row');
                barcos.forEach((barco, index) => {
                    const equipamiento = Array.isArray(barco.equipamiento) ? barco.equipamiento.join(', ') : barco.equipamiento;
                    const card = `
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="${barco.imagen}" class="card-img-top" data-toggle="collapse" data-target="#collapse${index}">
                                <div class="card-body">
                                    <h5 class="card-title">${barco.nombre}</h5>
                                    <div id="collapse${index}" class="collapse">
                                        <p class="card-text"><strong>Tipo:</strong> ${barco.tipo}</p>
                                        <p class="card-text"><strong>Capacidad Pasajeros:</strong> ${barco.capacidad_pasajeros}</p>
                                        <p class="card-text"><strong>Tripulacion:</strong> ${barco.tripulacion}</p>
                                        <p class="card-text"><strong>Equipamiento:</strong> ${equipamiento}</p>
                                        <p class="card-text"><strong>Atracado:</strong> ${barco.atracado}</p>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-danger btn-sm" onclick="eliminarBarco('${barco.nombre}')">Eliminar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    row.innerHTML += card; 
                    if ((index + 1) % 3 === 0 || index === barcos.length - 1) {
                        barcosContainer.appendChild(row); 
                        row = document.createElement('div');
                        row.classList.add('row');
                    }
                });
            })
            .catch(error => console.error('Error al obtener los datos de los barcos:', error));
            
        function eliminarBarco(nombreBarco) {
            const confirmacion = confirm(`Â¿EstÃ¡s seguro de que deseas eliminar el barco "${nombreBarco}"?`);
            if (confirmacion) {
                fetch('/eliminarBarco', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ nombre: nombreBarco })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error al eliminar el barco');
                    }
                    return response.json();
                })
                .then(data => {
                    alert(data.mensaje);
                    location.reload();
                })
                .catch(error => {
                    console.error('Error al eliminar el barco:', error.message);
                    alert('Error al eliminar el barco. Por favor, intÃ©ntalo de nuevo.');
                });
            }
        }
