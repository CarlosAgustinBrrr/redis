    <script>
        // Obtener los datos de los eventos de la peticiÃ³n /obtenerEventos
        fetch('/obtenerEventos')
            .then(response => response.json())
            .then(eventos => {
                const eventosBody = document.getElementById('eventosBody');
                const pagination = document.getElementById('pagination');
                const eventosPerPage = 6;
                const pages = Math.ceil(eventos.length / eventosPerPage);
                
                function displayEventos(pageNumber) {
                    eventosBody.innerHTML = '';
                    const start = (pageNumber - 1) * eventosPerPage;
                    const end = start + eventosPerPage;
                    const paginatedEventos = eventos.slice(start, end);
                    paginatedEventos.forEach(evento => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${evento.evento}</td>
                            <td>${evento.timestamp}</td>
                            <td>${evento.barco}</td>
                            <td>${evento.muelle}</td>
                        `;
                        eventosBody.appendChild(row);
                    });
                }
                
                function setupPagination() {
                    pagination.innerHTML = '';
                    for (let i = 1; i <= pages; i++) {
                        const li = document.createElement('li');
                        li.classList.add('page-item');
                        const link = document.createElement('a');
                        link.classList.add('page-link');
                        link.href = '#';
                        link.innerText = i;
                        li.appendChild(link);
                        pagination.appendChild(li);
                        
                        link.addEventListener('click', () => {
                            displayEventos(i);
                        });
                    }
                }
                
                displayEventos(1);
                setupPagination();
            })
            .catch(error => console.error('Error al obtener los datos de los eventos:', error));
    </script>
