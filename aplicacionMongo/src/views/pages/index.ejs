    <script>
        function showBarcos(nombreMuelle, muelleIndex) {
            const muelleContainer = document.getElementById(`muelleContainer${muelleIndex}`);
            const barcosContainer = muelleContainer.querySelector('.barcos-container');
            // Si ya hay barcos mostrados, se ocultaran.
            if (barcosContainer.innerHTML.trim() !== '') {
                barcosContainer.innerHTML = '';
                return;
            }
            fetch(`/obtenerBarcosEspecificos/${nombreMuelle}`)
                .then(response => response.json())
                .then(barcos => {
                    barcos.forEach((barco, index) => {
                        const equipamiento = Array.isArray(barco.equipamiento) ? barco.equipamiento.join(', ') : barco.equipamiento;
                        const card = `
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <img src="${barco.imagen}" class="card-img-top" data-toggle="collapse" data-target="#collapse${muelleIndex}${index}">
                                    <div class="card-body">
                                        <h5 class="card-title">${barco.nombre}</h5>
                                        <div id="collapse${muelleIndex}${index}" class="collapse">
                                            <p class="card-text"><strong>Tipo:</strong> ${barco.tipo}</p>
                                            <p class="card-text"><strong>Capacidad Pasajeros:</strong> ${barco.capacidad_pasajeros}</p>
                                            <p class="card-text"><strong>Tripulacion:</strong> ${barco.tripulacion}</p>
                                            <p class="card-text"><strong>Equipamiento:</strong> ${equipamiento}</p>
                                            <p class="card-text"><strong>Atracado:</strong> ${barco.atracado}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                        barcosContainer.innerHTML += card;
                    });
                })
                .catch(error => console.error('Error al obtener los barcos especÃ­ficos:', error.message));
        }
        fetch('/muelles')
            .then(response => response.json())
            .then(muelles => {
                const muellesContainer = document.getElementById('muellesContainer');
                muelles.forEach((muelle, index) => {
                    const servicios = muelle.servicios.join(', ');
                    const muelleCard = `
                        <div class="col-lg-6 mb-4">
                            <div id="muelleContainer${index}" class="card text-dark">
                                <div class="card-header bg-dark text-white text-center">
                                    <h5>${muelle.nombre}</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>UbicaciÃ³n:</strong> ${muelle.ubicacion.latitud}, ${muelle.ubicacion.longitud}</p>
                                    <p><strong>Capacidad MÃ¡xima:</strong> ${muelle.capacidad}</p>
                                    <p><strong>Servicios:</strong> ${servicios}</p>
                                    <button class="btn btn-success btn-block" onclick="showBarcos('${muelle.nombre}', ${index})">Mostrar Barcos</button>
                                    <div class="row mt-4 barcos-container"></div>
                                </div>
                            </div>
                        </div>
                    `;
                    muellesContainer.innerHTML += muelleCard;
                });
            })
            .catch(error => console.error('Error al obtener los datos de los muelles:', error));
    </script>
